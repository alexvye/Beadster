package vye.rest.controller.fixture;

import vye.core.events.*;
import vye.rest.domain.Card;

import java.util.ArrayList;
import java.util.List;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;

//TODOCUMENT.  Use of test data fixture classes is considered good practice.
/*
 The majority of tests aren't testing data edge cases, they are testing logical flows and
 what happens to a generic set of data.  For these, use a small, standardised set of fixtures.

 For anything more esoteric, create a new fixture in the test class.
 */
public class RestDataFixture {
  public static final String CARD_NAME = "Thor";

  public static QueryHandEvent queryHand() {
    List<Card> cards = new ArrayList<Card>();

    cards.add(standardCard());
    cards.add(standardCard());
    cards.add(standardCard());

    return new QueryHandEvent(cards);
  }

  public static Card standardCard() {
    Card card = new Card(CARD_NAME, 1,1,1);

    return card;
  }

  public static String standardCardJSON() {
	  Gson gson = (new GsonBuilder()).create();
    return "{ \"attack\": 1 }";
  }
}